{
  "server": {
    "mode": "debug",
    "http": {
      "address": ":8080"
    },
    "grpc": {
      "address": ":9090"
    }
  },
  "database": {
    "driver": "mysql",
    "host": "localhost",
    "port": 3306,
    "name": "telegram_gateway",
    "user": "root",
    "password": "password"
  },
  "redis": {
    "address": "localhost:6379",
    "password": "",
    "db": 0
  },
  "auth": {
    "jwt": {
      "secret": "your-secret-key-min-32-characters-long-change-me",
      "access_token_ttl": "15m",
      "refresh_token_ttl": "168h"
    },
    "api_key": {
      "prefix": "tgw_"
    }
  },
  "telegram": {
    "webhook_base_url": "https://your-domain.com"
  },
  "webhook_delivery": {
    "worker_count": 10,
    "max_retries": 5
  },
  "rate_limit": {
    "requests_per_second": 100,
    "burst": 200
  }
}
